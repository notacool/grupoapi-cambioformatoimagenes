[MASTER]
# Usar múltiples procesos para acelerar el análisis
jobs=0

# Archivos y directorios a ignorar
ignore=CVS,.git,__pycache__,.venv,venv,env

# Archivos a analizar
recursive=yes

[MESSAGES CONTROL]
# Deshabilitar warnings específicos
disable=C0114,C0115,C0116,E0401,W0611,W0613,W0718,W1309,R0914,R0913,R0912,R0915,R0801,W0107,W0212,W1309,R1705,C0415,C0302,R1732

# Habilitar solo ciertos warnings
enable=C0301,C0303

[REPORTS]
# Formato del reporte
output-format=text

# Mostrar score
score=yes

# Mostrar estadísticas
reports=yes

[FORMAT]
# Longitud máxima de línea
max-line-length=120

# Máximo número de caracteres en una línea de docstring
# docstring-max-length=120  # Opción no reconocida en versiones anteriores de Pylint

[BASIC]
# Nombres de variables válidos
good-names=i,j,k,ex,Run,_,id

# Nombres de variables a evitar
bad-names=foo,bar,baz,toto,tutu,tata

[SIMILARITIES]
# Número mínimo de líneas similares para reportar
min-similarity-lines=4

# Número mínimo de tokens similares para reportar
# min-similarity-tokens=50  # Opción no reconocida en versiones anteriores de Pylint

[TYPECHECK]
# Lista de módulos donde los miembros pueden ser dinámicos
generated-members=REQUEST,acl_users,aq_parent,"[a-zA-Z]+_set{1,2}",save,delete

[MISCELLANEOUS]
# Lista de notas que se pueden usar en docstrings
notes=
